<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/movieDiscoverBackground"
                tools:context=".fragment.MoviesDiscoveryFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/discovery_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        style="@style/MovieDiscovery.GeneralText"
        android:id="@+id/general_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/movie_discovery_no_data" />

    <ProgressBar
        style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
        android:id="@+id/load_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    </ProgressBar>

</RelativeLayout>
