<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Movie Details -->
    <style name="MovieDetails" />
    <style name="MovieDetails.ReleaseDate" >
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/movieDetailsTextPrimary</item>
        <item name="android:padding">@dimen/movie_details_general_padding</item>
    </style>
    <style name="MovieDetails.TotalVotes" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/movieDetailsTextPrimary</item>
        <item name="android:padding">@dimen/movie_details_general_padding</item>
    </style>
    <style name="MovieDetails.Synopsis" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/movieDetailsTextSynopsis</item>
        <item name="android:padding">@dimen/movie_details_general_padding</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>


</resources>
